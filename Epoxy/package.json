{
  "name": "epoxy",
  "version": "1.0.0-beta.1",
  "description": "Epoxy - Visual Package & Module Manager for Packet SDK",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"tsc -p tsconfig.preload.json --watch\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json && electron ."
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "dev.packet.epoxy",
    "productName": "Epoxy",
    "publish": null,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "modules/**/*",
      "public/icon.png"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Development"
    }
  }
}
