{
  "name": "packet-sdk",
  "version": "1.0.0-beta.1",
  "private": true,
  "description": "Full-stack TypeScript SDK that eliminates boilerplate setup work",
  "workspaces": [
    "packages/*",
    "license-server"
  ],
  "pnpm": {
    "overrides": {}
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:release": "node scripts/build-obfuscated.mjs",
    "build:standalone": "node scripts/build-standalone.mjs",
    "build:all": "pnpm build && pnpm build:release && pnpm build:standalone",
    "package:standalone": "node scripts/package-standalone.mjs",
    "test:standalone": "node scripts/test-standalone.mjs",
    "dist": "pnpm build:standalone && pnpm test:standalone && pnpm package:standalone",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "javascript-obfuscator": "^5.3.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.3"
}
